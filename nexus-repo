node{
   stage('SCM Checkout'){
     git 'https://github.com/tarikgwa/appengine-websocketchat-java.git'
   }
   stage('Compile-Package'){
      // Get maven home path
      def mvnHome =  tool name: 'maven-3', type: 'maven'   
      sh "${mvnHome}/bin/mvn package"
   }  
   stage('Upload WAR Project to Nexus Artifact Repository ') {
   nexusArtifactUploader artifacts: [[artifactId: 'websocketchat', classifier: '', file: 'target/websocketchat-1.0.war', type: 'war']], 
   credentialsId: 'nexus-3', groupId: 'com.google.appengine.demos', nexusUrl: '172.17.0.3:8081', nexusVersion: 'nexus3', protocol: 'http', repository: 
   'websocketchat-release', version: '1.0'
   }
   
      stage("Nexus Artifact repository Status Check"){
          timeout(time: 1, unit: 'HOURS') {
              def na = nexusArtifactUploader()
              if (na.status != 'OK') {
                   slackSend baseUrl: 'https://hooks.slack.com/services/',
                   channel: '#devops',
                   color: 'danger', 
                   message: 'Artifact repository Failed', 
                   teamDomain: 'voixlabs',
                   credentialsId: 'nexus-3',
                   username: 'JENKINS_BOT'
                  error "Pipeline aborted due to quality gate failure: ${qg.status}"
              }
          }
      }    
   
   stage('Slack Notification'){
       slackSend baseUrl: 'https://hooks.slack.com/services/',
                   channel: '#devops',
                   color: 'good', 
                   message: 'Nexus Artifact Repository Upload Successed', 
                   teamDomain: 'voixlabs',
                   credentialsId: 'nexus-3',
                   username: 'JENKINS_BOT'
   }

}
